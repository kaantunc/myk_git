/* OGRENME CIKTISI */
.ui-icon {
    float: left;
}

.ogrenme_ciktisi_wrapper{
	border:1px solid silver;
	margin-bottom:15px;
	background-color:white;
	position:relative;
	padding: 10px;
}

.basarim_olcutu_wrapper{
	/*border:1px solid silver;*/
	border-top: 1px solid #063B5E;
	margin-bottom:10px;
	margin-left:30px;
	margin-right:15px;
	background-color:white;
	position: relative;
}

.basarim_olcutu{
	margin-top:10px;
	margin-bottom:10px;
}

.sort_button{
	background:url("img/ogrenme-cikti-ucgen.png") no-repeat;
	width:39px;
	height:31px;
	position:absolute;
	right:0;
	top: 0;
}

.ogrenme_ciktisi{
	margin-top:5px;
	margin-bottom:5px;
}

.baglam{
	margin-top:5px;
	margin-bottom:5px;
	margin-left:45px;
}

.siraNo{
	float:left;
	font-weight:bold;
	margin-left:5px;
	margin-right:5px;
	font-size:14px;
}

.ui-icon-plusthick {
    background-position: -32px -128px !important;
}

.baglam_ekle_button{
	background:url("img/baglam-ekle-ok.png") no-repeat;
	width:32px;
	height:24px;
	float: left;
	margin-left: 12px; 
	margin-top: -4px;
}

.ogrenme-ekle-button{
	margin-bottom: 10px;
    margin-top: 10px;
}

.ogrenme_kaydet, .ogrenme_iptal, .basarim_kaydet, .basarim_iptal, .baglam_kaydet, .baglam_iptal, 
.basarim_ekle_iptal, .baglam_ekle, .baglam_ekle_iptal, .ogrenme_ekle_kaydet, .ogrenme_ekle_iptal{
	margin-left: 5px;
	margin-right: 5px;
}

.submit_button_bo{
	margin-right:15px;
}

