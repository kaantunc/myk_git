@CHARSET "ISO-8859-1";
td.enabled {
    color: green;
}

td.disabled {
    color: red;
}

th.aktifHead{
	width: 9%;
}

th.tarih{
	width: 9%;
}
th.checkbox{
	width: 1%;
}
th.kurum{
	width: 20%;
}
table#yonetimKuruluListe{
	table-layout:fixed;
	width:100%;
	overflow:hidden;
	word-wrap:break-word;
}

div#yonetimKuruluListe_wrapper{
	margin-top:10px;
}

#yeniButton{
	background-image: url('../../../images/ekle.png'); 
	background-position: left center;
	background-repeat: no-repeat;
	width:30; 
	height:30;
	padding: 2px 5px 2px 18px;
	cursor:pointer;
}

#etkinlestirButton{
	background-image: url('../../../images/etkin.png'); 
	background-position: left center;
