input[type="button"]:hover{
	background-color: #B0C0DD;
}

.disabled:hover{
	background-color: #F0F0F0 !important;
}

div.toolbar{
	text-align:right;
}

.form_content{
	padding: 15px;
}

.form_row{
	padding-bottom: 2px; 
	padding-top: 2px;
}

.leftCol{
	width:16%;
	float:left;
}

.rightCol{
	width:80%;
	float:left;
}

tr.checkedRow td{
	background-color:#627BAC !important;
	color:white;
}

.tablo_row, .tablo_row:hover{
	background:none;
}

input.error{
	border:1px solid red;
}

label.error{
	color:red;
}

.gridview_wrapper{
	border:1px solid #898989;
	padding: 10px 5px;
}

.submit_button{
	text-align:right;
}